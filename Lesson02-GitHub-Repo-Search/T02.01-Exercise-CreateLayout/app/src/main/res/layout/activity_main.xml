<!-- (1) Changed the ConstraintLayout to a LinearLayout-->
<!-- (2) made the orientation vertical-->
<!-- (3) Given left, right, and top padding of 16dp-->
<!-- (4) Removed the line that declares the id, we don't need it-->
<!-- (5) Removed the xmlns:app declaration, we don't need that anymore-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- (6) Deleted this TextView-->


    <!-- (7) Added an EditText-->
    <!--(8) Given the EditText an id of @+id/et_search_box-->
    <!--(9) Set the text size to 22sp-->
    <!--(10) Set the width to match_parent and the height to wrap_content-->
    <!--(11) Provided a hint telling the user to enter a query and then click search-->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/et_search_box"
        android:hint="Enter a Query and click search"/>

    <!-- (12) Added a TextView-->
    <!--(13) Given the TextView an id of @+id/tv_url_display-->
    <!--(14) Set the text size to 22sp-->
    <!--(15) Set the width to wrap_content and the height to wrap_content-->
    <!--(16) Given the TextView a top margin of 8dp-->
    <!--(17) Set the text to tell the user their search URL will show up here when they click search-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_url_display"
        android:textSize="22sp"
        android:layout_marginTop="8dp"
        android:text="Your url will appear here when click search"/>

    <!-- (18) Added a ScrollView-->
    <!-- (19) Set the width to match_parent and the height to wrap_content-->
    <!-- (20) Set the top margin to 16dp-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_github_search_result_json"
            android:textSize="18sp"
            android:text="i am empty try any github query on me "
            />
    </ScrollView>

        <!-- (21) Within the ScrollView, added a TextView-->
        <!-- (22) Given the TextView an id of @+id/tv_github_search_results_json-->
        <!--(23) Set the text size to 18sp-->
        <!--(24) Set the height and width to wrap_content-->
    <!-- (25) Set the text to something that tells the user to make a search-->

</LinearLayout>
